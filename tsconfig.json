{
  "compilerOptions": {
    "alwaysStrict": true,
    "baseUrl": "./src",
    "esModuleInterop": true,
    "jsx": "react",
    "module": "commonjs",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "outDir": "./dist/",
    "paths": {
      "@components/*": ["components/*"],
      "@env": ["../env.ts"],
      "@pages/*": ["pages/*"],
      "@styles/*": ["styles/*"],
      "@utilities/*": ["utilities/*"],
    },
    "sourceMap": true,
    "strictFunctionTypes": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "suppressImplicitAnyIndexErrors": true,
    "target": "es5",
  },
  "exclude": [
    "node_modules",
    "**/?(*.)+(spec|test).+(ts|tsx|js)",
  ],
}