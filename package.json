{
  "name": "timeward",
  "version": "0.4.0",
  "description": "productivity for perfectionists",
  "main": "index.js",
  "repository": "git@github.com:rpivo/timeward.git",
  "author": "Ryan Pivovar <ryanpivovar@gmail.com>",
  "license": "MIT",
  "jest": {
    "collectCoverageFrom": [
      "**/*.{ts,tsx}",
      "!**/node_modules/**",
      "!**/vendor/**"
    ],
    "moduleNameMapper": {
      "@components/(.*)": "<rootDir>/src/components/$1",
      "@pages/(.*)": "<rootDir>/src/pages/$1",
      "@styles/(.*)": "<rootDir>/src/styles/$1"
    },
    "roots": [
      "<rootDir>/src"
    ],
    "testMatch": [
      "**/__tests__/**/*.+(ts|tsx|js)",
      "**/?(*.)+(spec|test).+(ts|tsx|js)"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    }
  },
  "devDependencies": {
    "@types/eslint": "^6.1.3",
    "@types/jest": "^24.0.23",
    "@types/node": "^12.12.17",
    "@types/react": "^16.9.16",
    "@types/react-dom": "^16.9.4",
    "@types/react-test-renderer": "^16.9.1",
    "@types/styled-components": "^4.4.1",
    "@types/webpack": "^4.41.0",
    "@types/webpack-bundle-analyzer": "^2.13.3",
    "@types/webpack-dev-server": "^3.9.0",
    "@types/webpack-merge": "^4.1.5",
    "@typescript-eslint/eslint-plugin": "^2.11.0",
    "@typescript-eslint/parser": "^2.11.0",
    "eslint": "^6.7.1",
    "eslint-plugin-react": "^7.16.0",
    "jest": "^24.9.0",
    "react-test-renderer": "^16.12.0",
    "source-map-loader": "^0.2.4",
    "ts-jest": "^24.2.0",
    "ts-loader": "^6.2.1",
    "ts-node": "^8.5.4",
    "tsconfig-paths-webpack-plugin": "^3.2.0",
    "typescript": "^3.7.3",
    "webpack": "^4.41.2",
    "webpack-bundle-analyzer": "^3.6.0",
    "webpack-cli": "^3.3.10",
    "webpack-dev-server": "^3.9.0",
    "webpack-merge": "^4.2.2"
  },
  "dependencies": {
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "styled-components": "^4.4.1"
  },
  "scripts": {
    "analyze": "webpack --config webpack/webpack.analyzer.ts --progress",
    "start": "webpack-dev-server --config webpack/webpack.dev.ts --progress",
    "build": "yarn lint && webpack --config webpack/webpack.prod.ts --progress",
    "lint": "eslint './src/**/*.{ts,tsx}'",
    "test": "jest --watchAll --coverage"
  }
}
